<div class="columns is-desktop is-centered">
  <div class="column is-4">
    <h1 class="title has-text-centered">Register</h1>

    <%= form_for @changeset, Routes.user_registration_path(@conn, :create), fn f -> %>
      <%= if @changeset.action do %>
        <%= error_alert() %>
      <% end %>

      <%= text_control f, :email, "Email", true %>
      <%= text_control f, :password, "Password", true %>

      <div class="field">
        <%= submit "Register", class: "button is-primary" %>
      </div>

      <div class="field">
        <div class="buttons">
          <%= link "Log in", to: Routes.user_session_path(@conn, :new), class: "button is-info " %>
          <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new), class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
